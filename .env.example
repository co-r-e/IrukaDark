# IrukaDark example environment file
# Copy to .env.local and edit values as needed. Do not commit .env.local.

# Gemini API Key (get from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
WEB_SEARCH_MODEL=gemini-2.5-flash-lite

# UI language: 'en' or 'ja'
MENU_LANGUAGE=en

# Theme: 'light' or 'dark'
UI_THEME=dark

# Glass/blur intensity: 'low' | 'medium' | 'high'
GLASS_LEVEL=medium

# Window opacity (1 = fully opaque)
WINDOW_OPACITY=1

# Keep windows on top across all apps/spaces (1 = enabled, 0 = disabled)
PIN_ALL_SPACES=1

# Use Google Search grounding in Gemini calls (1 = enabled, 0 = disabled)
ENABLE_GOOGLE_SEARCH=0

