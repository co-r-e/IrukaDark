{
  "name": "irukadark",
  "version": "1.1.3",
  "description": "Local AI Chat App (Off-mode only)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev-tools": "electron . --dev --devtools",
    "build:swift": "node scripts/build-swift-bridge.js",
    "clean": "node scripts/clean.js",
    "clean:dry": "node scripts/clean.js --dry-run",
    "dist": "npm run build:swift && electron-builder --mac dmg --publish always",
    "dist:mac:x64": "npm run build:swift && electron-builder --mac dmg --x64 --publish always",
    "dist:mac:arm64": "npm run build:swift && electron-builder --mac dmg --arm64 --publish always",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prepare": "husky",
    "check:menu-translations": "node scripts/check-menu-translations.js",
    "release:patch": "npm version patch -m \"chore(release): %s\" && git push && git push --follow-tags",
    "release:minor": "npm version minor -m \"chore(release): %s\" && git push && git push --follow-tags",
    "release:major": "npm version major -m \"chore(release): %s\" && git push && git push --follow-tags"
  },
  "keywords": [
    "electron",
    "ai",
    "chat"
  ],
  "author": {
    "name": "CORe Inc.",
    "email": "contact@co-r-e.com",
    "url": "https://github.com/co-r-e"
  },
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "electron-updater": "^6.1.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/co-r-e/IrukaDark.git"
  },
  "lint-staged": {
    "*.{js,css,html,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
