{
  "name": "irukadark",
  "version": "1.0.1",
  "description": "Local AI Chat App (Off-mode only)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev-tools": "electron . --dev --devtools",
    "icons": "node scripts/generate-icons.js",
    "clean": "node scripts/clean.js",
    "clean:dry": "node scripts/clean.js --dry-run",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prepare": "husky",
    "check:menu-translations": "node scripts/check-menu-translations.js",
    "dist": "npm run icons && electron-builder --publish never",
    "dist:mac": "npm run icons && electron-builder -m --publish never",
    "dist:mac:arm64": "npm run icons && electron-builder -m --arm64 --publish never",
    "dist:mac:universal": "npm run icons && electron-builder -m --universal --publish never",
    "dist:win": "npm run icons && electron-builder -w --x64 --arm64 --publish never",
    "dist:win:x64": "npm run icons && electron-builder -w --x64 --publish never",
    "dist:win:arm64": "npm run icons && electron-builder -w --arm64 --publish never",
    "dist:linux": "npm run icons && electron-builder -l --x64 --arm64 --publish never",
    "dist:linux:x64": "npm run icons && electron-builder -l --x64 --publish never",
    "dist:linux:arm64": "npm run icons && electron-builder -l --arm64 --publish never",
    "dist:mac:arm64:pub": "npm run icons && electron-builder -m --arm64 --publish always",
    "dist:win:x64:pub": "npm run icons && electron-builder -w --x64 --publish always",
    "dist:linux:x64:pub": "npm run icons && electron-builder -l --x64 --publish always",
    "dist:mac:auto": "node scripts/build-mac-auto.js",
    "dist:mac:auto:pub": "PUBLISH=always node scripts/build-mac-auto.js",
    "dist:mac:sandbox": "SANDBOX=1 node scripts/build-mac-auto.js",
    "dist:mac:sandbox:pub": "SANDBOX=1 PUBLISH=always node scripts/build-mac-auto.js",
    "dist:all:fast": "npm run icons && npm run dist:mac && npm run dist:win:x64 && npm run dist:linux:x64",
    "dist:all": "npm run icons && npm run dist:mac:universal && npm run dist:win && npm run dist:linux",
    "checksums": "node scripts/generate-checksums.js"
  },
  "keywords": [
    "electron",
    "ai",
    "chat"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "dotenv": "^16.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/co-r-e/IrukaDark.git"
  },
  "lint-staged": {
    "*.{js,css,html,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "build": {
    "appId": "com.core.irukadark",
    "productName": "IrukaDark",
    "artifactName": "IrukaDark-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": false,
      "identity": null
    },
    "dmg": {
      "sign": false,
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/renderer/assets/icons/IrukaDark_desktopicon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons",
      "maintainer": "IrukaDark <irukadark@example.com>"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "co-r-e",
        "repo": "IrukaDark",
        "releaseType": "release",
        "vPrefixedTagName": true
      }
    ]
  }
}
