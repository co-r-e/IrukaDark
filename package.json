{
  "name": "irukadark",
  "version": "1.0.0",
  "description": "Local AI Chat App (Off-mode only)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev-tools": "electron . --dev --devtools",
    "clean": "node scripts/clean.js",
    "clean:dry": "node scripts/clean.js --dry-run",
    "dist": "electron-builder --publish always",
    "dist:mac:x64": "electron-builder --mac dmg --x64 --publish always",
    "dist:mac:arm64": "electron-builder --mac dmg --arm64 --publish always",
    "dist:win": "electron-builder --win nsis --x64 --publish always",
    "dist:linux": "electron-builder --linux --x64 --publish always",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prepare": "husky",
    "check:menu-translations": "node scripts/check-menu-translations.js"
  },
  "keywords": [
    "electron",
    "ai",
    "chat"
  ],
  "author": {
    "name": "CORe Inc",
    "email": "noreply@users.noreply.github.com",
    "url": "https://github.com/co-r-e"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "dotenv": "^16.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/co-r-e/IrukaDark.git"
  },
  "lint-staged": {
    "*.{js,css,html,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "build": {
    "appId": "com.core.irukadark",
    "productName": "IrukaDark",
    "asar": true,
    "files": [
      "package.json",
      "src/**/*",
      "node_modules/**/*",
      "!**/*.map",
      "!**/docs/**",
      "!**/tests/**",
      "!**/.github/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "artifactName": "IrukaDark-${version}-mac-${arch}.${ext}",
      "icon": "icon.png",
      "hardenedRuntime": true
    },
    "dmg": {
      "artifactName": "IrukaDark-${version}-mac-${arch}.dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "artifactName": "IrukaDark-${version}-win-${arch}-setup.${ext}",
      "publisherName": "CORe Inc"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "IrukaDark-${version}-linux-${arch}.${ext}",
      "icon": "icon.png",
      "maintainer": "CORe Inc <noreply@users.noreply.github.com>"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "co-r-e",
        "repo": "IrukaDark",
        "releaseType": "release"
      }
    ]
  }
}
